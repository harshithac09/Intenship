
class Instagram:
    def __init__(self, title, description, creator_name, location, comments=None):
        """
        Constructor to initialize Instagram reel attributes
        """
        self.title = title                  
        self.description = description      
        self.likes = 0                       
        self.creator_name = creator_name     
        self.location = location             
        self.comments = comments or []       

    def display_title(self):
        print("The title of the reel is:", self.title)

    def display_description(self):
        print("The description of the reel is:", self.description)

    def display_likes(self):
        print("The likes of the reel is:", self.likes)

    def liked(self):
        self.likes += 1

    def disliked(self):
        if self.likes > 0:
            self.likes -= 1

    def display_creator_name(self):
        print("The creator of the reel is:", self.creator_name)

    def display_location(self):
        print("The location of the reel is:", self.location)

    def display_comments(self):
        if self.comments:
            print("Comments on the reel:")
            for comment in self.comments:
                print("-", comment)
        else:
            print("No comments yet.")

reel1 = Instagram(
    "dancing", 
    "dancing with friends", 
    "Alice", 
    "Bangalore", 
    ["Nice moves!", "Love this dance!", "Awesome!"]
)

reel2 = Instagram(
    "finance minister conference", 
    "finance minister conference with friends", 
    "Bob", 
    "New Delhi", 
    ["Informative session.", "Great insights!", "Well explained."]
)

reel1.disliked()  
reel1.liked()     
reel2.liked()     
reel1.liked()     
reel1.disliked()  

reel1.display_likes()  
reel2.display_likes()  

reel1.display_creator_name()
reel1.display_location()
reel1.display_comments()

reel2.display_creator_name()
reel2.display_location()
reel2.display_comments()
print(id(reel1))
print(id(reel2))
