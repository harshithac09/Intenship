
class InstagramAccount:

    def __init__(self, account_name, password):
        self.account_name = account_name
        self._private_reels = []
        self.__archived_reels = []
        self.__password = password

    def add_private_reel(self, reel_name):
        self._private_reels.append(reel_name)
        print("Private reel added:", reel_name)

    def display_private_reels(self, is_follower):
        if is_follower:
            print("Private Reels:")
            for r in self._private_reels:
                print("-", r)
        else:
            print("Access Denied! Only followers can view private reels")

    def add_archived_reel(self, reel_name):
        self.__archived_reels.append(reel_name)
        print("Archived reel added:", reel_name)

    def display_archived_reels(self, password):
        if password == self.__password:
            print("Archived Reels:")
            for r in self.__archived_reels:
                print("-", r)
        else:
            print("Access Denied! Only account holder can view archived reels")

    def get_archived_reels(self, password):
        if password == self.__password:
            return self.__archived_reels
        else:
            return "Wrong password — cannot access archived reels"

    def set_password(self, old_password, new_password):
        if old_password == self.__password:
            self.__password = new_password
            print("Password updated successfully")
        else:
            print("Wrong old password — cannot update")

acc = InstagramAccount("harshitha_official", "1234")

acc.add_private_reel("Dance Reel")
acc.add_private_reel("Travel Reel")

print()

acc.add_archived_reel("Old Reel 2023")
acc.add_archived_reel("College Fest Reel")

print()
print("Follower view:")
acc.display_private_reels(True)

print("\nNon-Follower view:")
acc.display_private_reels(False)

print()
print("Wrong password attempt:")
acc.display_archived_reels("0000")

print("\nCorrect password attempt:")
acc.display_archived_reels("1234")

print()
print("Getter result:", acc.get_archived_reels("1234"))
print("Getter wrong password:", acc.get_archived_reels("9999"))

print()
acc.set_password("1234", "abcd")

print("\nCheck with new password:")
acc.display_archived_reels("abcd")
